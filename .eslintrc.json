{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-console": 0,
        "ignoreComments": true,
        "keyword-spacing": [
            "after",
            "before"
        ],
        "eqeqeq" : 1,
        "space-infix-ops": [
          "error",
          {"int32Hint": false}
        ],
        "brace-style": [
          "stroustrup"
        ],
        "curly": [
          "multi-line"
        ],
        "camelcase": [
          "always"
        ],
        "space-before-function-paren": [
          "never"
        ]
    }
}
